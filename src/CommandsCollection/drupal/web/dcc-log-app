#!/bin/bash

############################
# DDEV Commands Collection #
############################

## https://github.com/jackd248/ddev-commands-collection
## v<version/>
## dcc-autogenerated
. "$(dirname "$0")/../dcc-config.sh"
. "$(dirname "$0")/../scripts/dcc-colors.sh"
printf "${reset}${cyan}[DCC]${reset} DDEV Commands Collection\n"

## Description: Executes 'drush watchdog-show' command for application log
## Usage: log:app
## Example: "ddev log:app"
printf "${reset}${cyan}[DCC]${reset}${reset}<web> ${black}drush watchdog-show $@${reset}\n"
drush watchdog-show $@
