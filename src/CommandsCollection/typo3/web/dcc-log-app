#!/bin/bash

############################
# DDEV Commands Collection #
############################

## https://github.com/jackd248/ddev-commands-collection
## v<version/>
## dcc-autogenerated
. "$(dirname "$0")/../dcc-config.sh"
. "$(dirname "$0")/../scripts/dcc-colors.sh"
printf "${reset}${cyan}[DCC]${reset} DDEV Commands Collection\n"

## Description: Executes 'tail' command for application log and colorize the output
## Usage: log:app
## Example: "ddev log:app -f"
if [ ! -d ${logPathApp} ]; then
  echo -e "${red}[Failure]${reset} Default log path doesn't exists: ${logPathApp}"
  exit 1
fi

cd ${logPathApp}
latestLogFile=$(find . -not -name "*_deprecations_*" -not -name ".htaccess" -type f)

printf "${reset}${cyan}[DCC]${reset}${reset}<web> ${black}tail $@ ${logPathApp}${latestLogFile}${reset}\n"
tail $@ ${latestLogFile} | sed --unbuffered \
  -e 's/\(.*CRITICAL.*\)/\o033[1;31m\1\o033[0;39m/'  \
  -e 's/\(.*FATAL.*\)/\o033[1;31m\1\o033[0;39m/'  \
  -e 's/\(.*ERROR.*\)/\o033[31m\1\o033[39m/'  \
  -e 's/\(.*ALERT.*\)/\o033[31m\1\o033[39m/'  \
  -e 's/\(.*WARN.*\)/\o033[33m\1\o033[39m/'  \
  -e 's/\(.*INFO.*\)/\o033[32m\1\o033[39m/'  \
  -e 's/\(.*DEBUG.*\)/\o033[34m\1\o033[39m/'  \
  -e 's/\(.*TRACE.*\)/\o033[30m\1\o033[39m/'  \
  -e 's/\(.*[Ee]xception.*\)/\o033[1;39m\1\o033[0;39m/'
